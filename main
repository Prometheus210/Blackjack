#player class
class Player:
    def __init__(self,name, money):
        self.name = name
        self.money = money

#Function defintions:
#First game functions:
def first_game():
    print("Would you like to begin playing? (Yes/No)")
    answer = input()
    if answer == "Yes":
        print("Alright then, goodluck!")
    elif answer == "No":
        print("Ready whenever you are!")
        first_game()
    else:
        missunderstanding_first_game()
def missunderstanding_first_game():
    print("Sorry I didn't quite understand, would you like to begin playing? (Yes/No)?")
    answer = input()
    if answer == "Yes":
        print("Alright then, goodluck!")
    elif answer == "No":
        print("Ready whenever you are!")
        first_game()
    else:
        missunderstanding_first_game()












